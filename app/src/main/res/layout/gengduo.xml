<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
            android:background="#c62727"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/top_mut1"
                />
            <TextView
                android:id="@+id/mid"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="10dp"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:text="更多"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/tbtnds2"
                />
        </LinearLayout>


    <TextView
        android:id="@+id/erweima"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="二维码扫描"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawableLeft="@mipmap/more_ico1"
        android:drawableRight="@mipmap/icon_right1"/>
    <TextView
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="分享"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawableLeft="@mipmap/more_ico2"
        android:drawableRight="@mipmap/icon_right1"/>

</LinearLayout>
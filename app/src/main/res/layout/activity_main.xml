<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wk.ybeg.MainActivity">
        <FrameLayout
            android:id="@+id/fl_discover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RadioGroup
            android:background="#fb464444"
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_Rodio_height"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <RadioButton
                android:drawableTop="@mipmap/bt_ico1a"
                android:id="@+id/rb_shouye"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rb_fenlei"
                android:drawableTop="@mipmap/bt_ico2a"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:button="@null"/>


            <RadioButton
                android:id="@+id/rb_gouwuche"
                android:layout_width="0dp"
                android:drawableTop="@mipmap/bt_ico3a"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:button="@null" />

            <RadioButton
                android:id="@+id/rb_wode"
                android:drawableTop="@mipmap/bt_ico4a"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/rb_gengduo"
                android:drawableTop="@mipmap/bt_ico5a"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:button="@null"/>

        </RadioGroup>




</RelativeLayout>

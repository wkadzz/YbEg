<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#c62727"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/tbtnhf1"
            />
        <TextView
            android:id="@+id/mid"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="10dp"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:text="延百e购"/>
        <ImageView
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/tbtnds2"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:id="@+id/shouye_img"
        />
    <RadioGroup
        android:id="@+id/shouye_rg"
        android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content" >
        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="50dp"
            android:button="@null"
            android:text="商品"
            android:checked="true"
            android:textSize="16sp"
            android:background="@drawable/shouye_back_new"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="50dp"
            android:button="@null"
            android:textSize="16sp"
            android:text="店铺"
            android:background="@drawable/shouye_back_new"
            android:layout_height="wrap_content" />
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:textColorHint="#878787"
            android:id="@+id/et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="请输入商品信息"
            android:layout_margin="5dp"
            android:paddingLeft="20dp"
            android:layout_marginLeft="10dp"/>
        <ImageButton
            android:id="@+id/bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/flico9"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:layout_weight="1"
           android:padding="5dp">
           <ImageView
               android:id="@+id/img1"
               android:layout_margin="-3dp"
               android:layout_gravity="center_horizontal"
               android:background="@drawable/yuanjiao"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/bt_01"/>
           <TextView
               android:id="@+id/tv1"
               android:layout_gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="10dp"
               android:text="商品分类"/>
           <ImageView
               android:id="@+id/img5"
               android:layout_margin="-3dp"
               android:layout_gravity="center_horizontal"
               android:background="@drawable/yuanjiao5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/bt5"/>
           <TextView
               android:id="@+id/tv5"
               android:layout_gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="10dp"
               android:text="促销列表"/>

       </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="5dp">
            <ImageView
                android:id="@+id/img2"
                android:layout_margin="-3dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/yuanjiao2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bt2"/>
            <TextView
                android:id="@+id/tv2"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="商品品牌"/>
            <ImageView
                android:id="@+id/img6"
                android:layout_margin="-3dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/yuanjiao6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bt6"/>
            <TextView
                android:id="@+id/tv6"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="购物车"/>

        </LinearLayout>
        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="5dp">
        <ImageView
            android:id="@+id/img3"
            android:layout_margin="-3dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/yuanjiao3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bt3"/>
        <TextView
            android:id="@+id/tv3"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="用户中心"/>
        <ImageView
            android:id="@+id/img7"
            android:layout_margin="-3dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/yuanjiao7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bt7"/>
        <TextView
            android:id="@+id/tv7"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="地图"/>

    </LinearLayout>
        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="5dp">
        <ImageView
            android:id="@+id/img4"
            android:layout_margin="-3dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/yuanjiao4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bt4"/>
        <TextView
            android:id="@+id/tv4"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="帮助中心"/>
        <ImageView
            android:id="@+id/img8"
            android:layout_margin="-3dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/yuanjiao8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bt8"/>
        <TextView
            android:id="@+id/tv8"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="联系我们"/>

    </LinearLayout>
    </LinearLayout>

</LinearLayout>